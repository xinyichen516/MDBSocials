<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xinyichen.mdbsocial.CreateSocial"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/pageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="75dp"
        android:text="Create Your Event:"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dateText"
        android:layout_width="265dp"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="MM/DD/YYYY"
        android:inputType="date"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintLeft_toLeftOf="@+id/titleText"
        app:layout_constraintRight_toRightOf="@+id/titleText"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <EditText
        android:id="@+id/titleText"
        android:layout_width="268dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Event Name"
        android:inputType="none|textCapWords"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pageText" />

    <EditText
        android:id="@+id/detailText"
        android:layout_width="267dp"
        android:layout_height="39dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="Details"
        android:inputType="textMultiLine"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateText"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="112dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="Upload"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="263dp"
        android:layout_height="131dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="@+id/detailText"
        app:layout_constraintTop_toBottomOf="@+id/detailText"
        app:srcCompat="@drawable/add_photo"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/detailText" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:text="Submit"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton"
        app:layout_constraintLeft_toRightOf="@+id/uploadButton"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
